@model IEnumerable<issDMKSite.Models.Block>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.blockName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.blockSecretaryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.blockSecretaryAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mobileNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.blockName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.blockSecretaryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.blockSecretaryAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mobileNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
