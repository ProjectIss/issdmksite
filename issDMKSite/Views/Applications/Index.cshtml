@model IEnumerable<issDMKSite.Models.Application>

@{
    /**/

    ViewBag.Title = "Index";
}

<style>
    .dataTables_wrapper {
        position: relative;
        clear: both;
        padding: 2% !important;
    }

    .container {
        width: 100%;
        padding-right: 15px;
        padding-left: 15px;
        /* margin-right: auto; */
        /* margin-left: auto; */
    }

    .container {
        max-width: 1300px;
    }
</style>

<link href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" type="text/css" />







<div class="col s12">
    <div class="container">
        <div class="section">
            <div class="card">
                <div class="card-header header-elements-inline" style="background-color: transparent;">
                    <div class="list-icons" style=" float: right;">
                        @if (@issDMKSite.Custom.Display.Role == "")
                        {
                            @Html.ActionLink("புதிதாக உருவாக்கு", "Create", null, new { @class = "btn btn-primary" })
                        }
                    </div>
                </div>
             

                <div class="card-tabs">
                    <table id="tblItems" class="display" style="width:100%">

                        <thead>
                            <tr>
                                <th>
                                    புகார் எண்
                                </th>
                                <th>
                                    விண்ணப்பிக்கப்பட்ட தேதி
                                </th>
                                <th>
                                    Detailofcomplain
                                </th>

                                <th>
                                    நிலை
                                </th>
                                <th>
                                    Department
                                </th>
                                @if (@issDMKSite.Custom.Display.Role != "")
                                {
                                    <th>

                                        <a>பின்னூட்டம்</a>

                                    </th>

                                    <th>

                                        <a>கருத்துகளை மதிப்பாய்வு செய்யவும்</a>


                                    </th>
                                    <th>
                                        <a>தொகுதி</a>
                                    </th>
                                }
                                <th>
                                    தேதி மற்றும் நேரம் எதிர்வினை
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.ComplainNo)
                                </td>
                                @if (@item.Dateofapplied != null)
                                {
                                    <td>
                                        @item.Dateofapplied.Value.ToShortDateString()

                                    </td>
                                }
                                else
                                {
                                    <td></td>}
                                
                                <th>
                                    @Html.DisplayFor(modelItem => item.Detailofcomplain)
                                </th>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Department.departmentName)
                                </td>
                                @if (issDMKSite.Custom.Display.Role != "")
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Feedback)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.ReviewComments)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.blockId)
                                    </td>
                                }
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateandTimeofReact)
                                </td>
                                <td>
                                    @if (issDMKSite.Custom.Display.Role != "")
                                    {@Html.ActionLink("Edit", "Edit", new { id = item.Id })} |
                                    @Html.ActionLink("விவரம்", "Details", new { id = item.Id }) |
                                    @if (issDMKSite.Custom.Display.Role != "")
                                    {@Html.ActionLink("Delete", "Delete", new { id = item.Id })}
                                </td>
                            </tr>
                            }

                        </tbody>

                    </table>
                </div>
            </div>


        </div>
    </div>
</div>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>
<script type="text/javascript" src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script type="text/javascript" src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.print.min.js" defer></script>


<script type="text/javascript">
    $(document).ready(function () {
        debugger
        $('#tblItems').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'print'
            ]
        });
       
    });

</script>
