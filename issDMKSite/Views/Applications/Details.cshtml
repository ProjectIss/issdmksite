@model issDMKSite.Models.Application




@{
    ViewBag.Title = "Details";
}
<div class="row">
    <div class="col-md-1">
        <div class="row">
        </div>
    </div>
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="card">
                <div style="float:right">
                    <button onclick="printFunction()" style="float: inherit;">Print</button>
                </div>


                <div class="card-header header-elements-inline">
                    <div class="header-elements" style="float: right;">
                        <div class="list-icons">
                            @Html.ActionLink("மீண்டும் பட்டியலில்", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })

                        </div>
                    </div>
                </div>



                <div class="card-body" id="print">
                    <div class="row">
                        <div class="col-md-1">
                            </div>
                            <div class="col-md-5">
                                <div class="form-group row">
                                    <label class="col-lg-3 font-weight-bold">புகார் எண்</label>:
                                    <div class="col-lg-8">
                                        @Html.DisplayFor(model => model.ComplainNo)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 font-weight-bold">Department </label>:
                                    <div class="col-lg-8">
                                        @Html.DisplayFor(model => model.Department.departmentName)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 font-weight-bold">விண்ணப்பிக்கப்பட்ட தேதி</label>:
                                    <div class="col-lg-8">
                                        @Html.DisplayFor(model => model.Dateofapplied)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 font-weight-bold">புகார் விவரம்</label>:
                                    <div class="col-lg-8">
                                        @Html.DisplayFor(model => model.Detailofcomplain)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 font-weight-bold">நிலை</label>:
                                    <div class="col-lg-8">
                                        @Html.DisplayFor(model => model.Status)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 font-weight-bold">கருத்துகளை மதிப்பாய்வு செய்யவும்</label>:
                                    <div class="col-lg-8">
                                        @Html.DisplayFor(model => model.ReviewComments)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 font-weight-bold">பின்னூட்டம்</label>:
                                    <div class="col-lg-8">
                                        @Html.DisplayFor(model => model.Feedback)
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 font-weight-bold">தேதி மற்றும் நேரம் எதிர்வினை</label>:
                                    <div class="col-lg-8">
                                        @Html.DisplayFor(model => model.DateandTimeofReact)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <img id="user_img" src=@Url.Content(@Model.DetailProof) class="" style="height:150px;width:200px;border:thick" /><br /><br />
                                @*<a style="height:35px;width:135px"><input id="file_upload" type="file" name="photo" style="padding-left:8%;" onchange="show(this)"></a>*@
                            </div>
                            <div class="col-md-3">
                            </div>
                        </div>
                    </div>
            </div>
        }
    </div>
</div>


<script>
    function printFunction() {
        printDiv("print");
    }
    function printDiv(divName) {
        var printContents = document.getElementById(divName).innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;

        window.print();

        document.body.innerHTML = originalContents;
    }
</script>
