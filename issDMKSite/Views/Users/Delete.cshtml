@model issDMKSite.Models.User

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col s12">
        <div class="card card-tabs">
            <div class="card-content">
                <div class="card-header header-elements-inline">
                    <div class="header-elements" style="float: right;">
                        <div class="list-icons">
                            @Html.ActionLink("மீண்டும் பட்டியலில்", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })

                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <form action="#">
                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Name</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.name)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">User Name</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.username)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Password</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.password)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Rol</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.role)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Status</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.status)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Block Name</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.blockName.blockName)
                            </div>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color" style="margin-left: 50%;">
                                <input type="submit" value="Delete" class="btn btn-default" /> 
                               
                            </div>
                        }
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>