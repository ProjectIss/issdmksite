@model issDMKSite.Models.Department

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col s12">
        <div class="card card-tabs">
            <div class="card-content">
                <div class="card-header header-elements-inline">
                    <div class="header-elements" style="float: right;">
                        <div class="list-icons">
                            @Html.ActionLink("மீண்டும் பட்டியலில்", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <form action="#">
                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">ID</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.id)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Department Name</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.departmentName)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Person Name</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.personName)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Person Address</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.persoAddress)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Email</label>:
                            <div class="col-lg-9">
                                @Html.DisplayFor(model => model.email)
                            </div>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color" style="margin-left: 50%;">
                                <input type="submit" value="Delete" class="btn btn-default" />

                            </div>
                        }
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>